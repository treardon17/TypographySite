doctype html
include ../util/include/include-css
include ../util/include/include-script

html
    head
        block title
            title Canter

        meta(name="viewport" content="width=device-width, initial-scale=1")
        +include-css('./resources/css/styles.css')
        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
        script(type="text/javascript" src="./resources/js/require.js")
        +include-script('./resources/js/parallax.js')
        +include-script('./resources/js/main.js')

    body(class="hidden")
        block pre-content
        div(id="viewport")
            include ../components/nav-bar/nav-bar
            div(id="viewport-content")
                div(id="content")
                    block content
